<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
	<Fragment>
    <UI>
      <Dialog Id="SquidAuthDlg" Width="370" Height="270" Title="[ProductName] Setup">
        <Control Id="Next" Type="PushButton" X="236" Y="243" Width="56" Height="17" Default="yes" Text="!(loc.WixUINext)" />
        <Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Text="!(loc.WixUIBack)" />
        <Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Cancel="yes" Text="!(loc.WixUICancel)">
          <Publish Event="SpawnDialog" Value="CancelDlg">1</Publish>
        </Control>

        <Control Id="Title" Type="Text" X="15" Y="6" Width="200" Height="15" Transparent="yes" NoPrefix="yes" Text="{\WixUI_Font_Title}[ProductName] settings" />
        <Control Id="Description" Type="Text" X="25" Y="23" Width="280" Height="15" Transparent="yes" NoPrefix="yes" Text="Here you need to setup proxy authentication." />
        <Control Id="BannerBitmap" Type="Bitmap" X="0" Y="0" Width="370" Height="44" TabSkip="no" Text="!(loc.InstallDirDlgBannerBitmap)" />
        <Control Id="BannerLine" Type="Line" X="0" Y="44" Width="370" Height="0" />
        <Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="0" />

        <Control Id="AuthCheckbox" Type="CheckBox" X="45" Y="73" Width="280" Height="15" Text="Enable proxy authentication" Property="SQUID_USE_AUTH" CheckBoxValue="1" />
        <Control Id="AuthProxyUserLabel" Type="Text" X="45" Y="93" Width="280" Height="12" Text="Proxy user name:" Disabled="yes">
          <Condition Action="enable">SQUID_USE_AUTH</Condition>
          <Condition Action="disable">NOT SQUID_USE_AUTH</Condition>
        </Control>
        <Control Id="AuthProxyUser" Type="Edit" X="45" Y="105" Width="280" Height="18" Property="SQUID_AUTH_USER" Disabled="yes">
          <Condition Action="enable">SQUID_USE_AUTH</Condition>
          <Condition Action="disable">NOT SQUID_USE_AUTH</Condition>
        </Control>
        <Control Id="AuthProxyPasswordLabel" Type="Text" X="45" Y="130" Width="280" Height="12" Text="Proxy user password (must not be empty):" Disabled="yes">
          <Condition Action="enable">SQUID_USE_AUTH</Condition>
          <Condition Action="disable">NOT SQUID_USE_AUTH</Condition>
        </Control>
        <Control Id="AuthProxyPassword" Type="Edit" X="45" Y="142" Width="280" Height="18" Property="SQUID_AUTH_PASSWORD" Password="yes" Disabled="yes">
          <Condition Action="enable">SQUID_USE_AUTH</Condition>
          <Condition Action="disable">NOT SQUID_USE_AUTH</Condition>
        </Control>
      </Dialog>
    </UI>
	</Fragment>
</Wix>
