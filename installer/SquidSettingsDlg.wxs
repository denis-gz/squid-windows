<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">
	<Fragment>
    <UI>
      <Dialog Id="SquidSettingsDlg" Width="370" Height="270" Title="[ProductName] Setup">
        <Control Id="Next" Type="PushButton" X="236" Y="243" Width="56" Height="17" Default="yes" Text="!(loc.WixUINext)" />
        <Control Id="Back" Type="PushButton" X="180" Y="243" Width="56" Height="17" Text="!(loc.WixUIBack)" />
        <Control Id="Cancel" Type="PushButton" X="304" Y="243" Width="56" Height="17" Cancel="yes" Text="!(loc.WixUICancel)">
          <Publish Event="SpawnDialog" Value="CancelDlg">1</Publish>
        </Control>

        <Control Id="Title" Type="Text" X="15" Y="6" Width="200" Height="15" Transparent="yes" NoPrefix="yes" Text="{\WixUI_Font_Title}[ProductName] settings" />
        <Control Id="Description" Type="Text" X="25" Y="23" Width="280" Height="15" Transparent="yes" NoPrefix="yes" Text="Here you need to specify [ProductName] settings for your network." />
        <Control Id="BannerBitmap" Type="Bitmap" X="0" Y="0" Width="370" Height="44" TabSkip="no" Text="!(loc.InstallDirDlgBannerBitmap)" />
        <Control Id="BannerLine" Type="Line" X="0" Y="44" Width="370" Height="0" />
        <Control Id="BottomLine" Type="Line" X="0" Y="234" Width="370" Height="0" />

        <Control Id="NetworksLabel" Type="Text" X="45" Y="73" Width="280" Height="12" Text="Networks to accept (list of &lt;ip_address&gt;/&lt;prefix&gt;, separated by commas):"/>
        <Control Id="NetworksEdit" Type="Edit" X="45" Y="85" Width="280" Height="18" Property="SQUID_ACCEPT_NETWORKS"/>
        <Control Id="DnsAddressLabel" Type="Text" X="45" Y="110" Width="280" Height="12" Text="DNS servers (separate by commas):"/>
        <Control Id="DnsAddressEdit" Type="Edit" X="45" Y="122" Width="280" Height="18" Property="SQUID_DNS_SERVERS"/>
        <Control Id="HttpPortLabel" Type="Text" X="45" Y="147" Width="280" Height="12" Text="HTTP port:"/>
        <Control Id="HttpPortEdit" Type="Edit" X="45" Y="159" Width="280" Height="18" Property="SQUID_HTTP_PORT"/>
      </Dialog>
    </UI>
	</Fragment>
</Wix>
